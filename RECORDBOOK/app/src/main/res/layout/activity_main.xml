<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<Button
    android:layout_width="match_parent"
    android:id="@+id/sign_up_home"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/already_member"
    android:layout_marginHorizontal="60dp"
    android:text="SIGN UP"
    android:layout_marginBottom="100dp"

    android:textAlignment="center"

    >

</Button>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/already_member"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_home"
        android:layout_marginTop="30dp"
        android:text="@string/already_a_member"
        >
    </TextView>

    <TextView
        android:id="@+id/sign_in_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/already_member"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/sign_in"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>